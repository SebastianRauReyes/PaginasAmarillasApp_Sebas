<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sebastian.paginasamarillasapp_sebas.activity.ResultActivity"
    android:background="@drawable/customborder4">

    <EditText
        android:id="@+id/BusquedaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Buscar"
        android:drawableStart="@mipmap/ic_finder_orange"/>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/BusquedaEditText"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>