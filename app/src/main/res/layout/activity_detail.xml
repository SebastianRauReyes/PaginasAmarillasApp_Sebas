<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity"
    android:background="@drawable/customborder4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="#D8D8D8"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/customborder1"
                android:padding="15dp"

                >

                <TableLayout
                    android:id="@+id/grid1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <TextView
                            android:id="@+id/name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="nombre"
                            android:layout_weight="1"/>
                    </TableRow>
                    <View
                        android:layout_below="@id/picture_image"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"/>
                    <TableRow>
                        <TextView
                            android:id="@+id/info_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="info"
                            android:textSize="20sp"
                            android:layout_weight="1" />
                    </TableRow>

                    <View
                        android:layout_below="@id/picture_image"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/primary_dark"
                            android:text="Web"
                            android:onClick="openBrowserApplication"
                            android:drawableTop="@mipmap/ic_web_black"
                            android:layout_weight="1"
                            android:layout_margin="5dp"/>
                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/primary_dark"
                            android:text="Call"
                            android:onClick="callNumber"
                            android:drawableTop="@mipmap/ic_phone_black"
                            android:layout_weight="1"
                            android:layout_margin="5dp"/>
                        <Button
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/primary_dark"
                            android:text="SMS"
                            android:onClick="smgNumber"
                            android:drawableTop="@mipmap/ic_sms_black"
                            android:layout_weight="1"
                            android:layout_margin="5dp"/>
                        <Button
                            android:id="@+id/button4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/primary_dark"
                            android:text="Email"
                            android:onClick="sendEmail"
                            android:drawableTop="@mipmap/ic_email_black"
                            android:layout_weight="1"
                            android:layout_margin="5dp"/>
                        <Button
                            android:id="@+id/button5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/primary_dark"
                            android:text="Share"
                            android:onClick="shareInfo"
                            android:drawableTop="@mipmap/ic_share_black"
                            android:layout_weight="1"
                            android:layout_margin="5dp"/>

                    </LinearLayout>

                </TableLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>


</RelativeLayout>